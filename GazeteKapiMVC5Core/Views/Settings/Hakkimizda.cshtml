@model GazeteKapiMVC5Core.Models.Site.AboutUsModel.AboutUsEditModel
@{
    ViewData["Title"] = "GizlilikPolitikası";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@functions{
    public string GetAntiXsrfRequestToken()
    {
        return Xsrf.GetAndStoreTokens(Context).RequestToken;
    }
}


<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("HakkimizdaDuzenle", "Settings", FormMethod.Post))
                {
                    @Html.HiddenFor(x => x.Id)

                    <div class="mb-3">
                        <h4 class="card-title">Hakkımızda</h4>
                        <p class="card-title-desc">Hakkımızda metninizi düzenleyin</p>
                    </div>
                    <div class="mb-3">
                        <label for="example-text-input" class="col-sm-12 col-form-label">Başlık</label>
                        <input asp-for="Title" autocomplete="off" data-toggle="tooltip" style="max-width:400px;" data-placement="bottom" class="form-control" type="text" id="example-text-input">
                    </div>
                    <div class="mb-3">
                        <label for="example-text-input" class="col-sm-12 col-form-label">İçerik</label>
                        <textarea asp-for="Content" class="ckeditor"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-primary" type="submit">Metni Düzenle</button>
                    </div>

                }
            </div>
        </div>
    </div>
</div>

<script src="https://uploads.gazetekapi.com/admin/wwwroot/ckeditor/ckeditor.js"></script>