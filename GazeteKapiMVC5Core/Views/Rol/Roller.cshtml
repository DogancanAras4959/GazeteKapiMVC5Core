@model IEnumerable<GazeteKapiMVC5Core.Models.Role.RolesListViewModel>
@{
    ViewData["Title"] = "Roller";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://uploads.gazetekapı.com/admin/wwwroot/assets/css/pageline.css" rel="stylesheet" />

<div class="row">
    <div class="col-12">
        @if (TempData["mesaj"] != null)
        {
            <div class="alert alert-warning">
                <p style="margin-bottom:0;">@TempData["mesaj"]</p>
            </div>
        }
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-6">
                        <h4 class="card-title">Yönetici Rolleri</h4>
                        <p class="card-title-desc">Yönetici rolleri ile ilgili tüm işlemlerinizi gerçekleştirin</p>
                    </div>
                    <div class="col-sm-6">
                        <div style="float:right;"><a asp-controller="Rol" asp-action="RolOlustur" class="btn btn-primary btn-sm">Rol Oluştur <i class="fas fa-plus fa-sm"></i></a></div>
                    </div>
                </div>
                <div class="table-rep-plugin mt-2">
                    <div class="table-responsive mb-0" data-bs-pattern="priority-columns">
                        <table class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                            <thead>
                                <tr>
                                    <th>Rol Adı</th>
                                    <th>Oluşturulma</th>
                                    <th>Güncellenme</th>
                                    <th>Durum</th>
                                    <th>İşlem</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr id="tooltip-container" class="button-items">
                                        <td>@*<a asp-action="RolDetay" asp-controller="Rol" asp-route-id="@item.Id">*@@Html.DisplayFor(modelItem => item.RoleName)@*</a>*@</td>
                                        <td>@Html.DisplayFor(modelItem => item.CreatedTime)</td>
                                        <td>@Html.DisplayFor(modelItem => item.UpdatedTime)</td>
                                        @if (item.IsActive == true)
                                        {
                                            <td><strong><span class="text-success">Aktif</span></strong></td>
                                        }
                                        else
                                        {
                                            <td><strong><span class="text-danger">Pasif</span></strong></td>
                                        }
                                        <td>
                                            @if (item.IsActive == false)
                                            {
                                                <a style="padding:3px;" data-bs-container="#tooltip-container"
                                                   data-bs-toggle="tooltip"
                                                   data-bs-placement="top" title="Rol Aktifleştir" asp-action="DurumDuzenle" asp-route-id="@item.Id"><i class="mdi mdi-lock-open mdi-24px text-success"></i></a>
                                                <a style="padding:3px;" data-bs-container="#tooltip-container"
                                                   data-bs-toggle="tooltip"
                                                   data-bs-placement="top" title="Rol Düzenle" asp-action="RolDuzenle" class="link-disabled" asp-route-id="@item.Id"><i class="mdi mdi-account-edit mdi-24px"></i></a>
                                                <a style="padding:3px;" data-bs-container="#tooltip-container"
                                                   data-bs-toggle="tooltip"
                                                   data-bs-placement="top" title="Rol Sil" asp-action="RolSil" asp-route-id="@item.Id" class="text-danger ml-1 link-disabled" onclick="return confirm('Bu rolü silmek istiyor musunuz?')"><i class="mdi mdi-delete-circle mdi-24px"></i></a>
                                            }
                                            else
                                            {
                                                <a style="padding:3px;" data-bs-container="#tooltip-container"
                                                   data-bs-toggle="tooltip"
                                                   data-bs-placement="top" title="Rol Pasifleştir" asp-action="DurumDuzenle" asp-route-id="@item.Id"><i class="mdi mdi-lock mdi-24px text-danger"></i></a>
                                                <a style="padding:3px;" data-bs-container="#tooltip-container"
                                                   data-bs-toggle="tooltip"
                                                   data-bs-placement="top" title="Rol Düzenle" asp-action="RolDuzenle" asp-route-id="@item.Id"><i class="mdi mdi-account-edit mdi-24px"></i></a>
                                                <a style="padding:3px;" data-bs-container="#tooltip-container"
                                                   data-bs-toggle="tooltip"
                                                   data-bs-placement="top" title="Rol Sil" asp-action="RolSil" asp-route-id="@item.Id" class="text-danger ml-1" onclick="return confirm('Bu rolü silmek istiyor musunuz?')"><i class="mdi mdi-delete-circle mdi-24px"></i></a>
                                            }
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


