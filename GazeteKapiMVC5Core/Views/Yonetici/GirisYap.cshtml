@model GazeteKapiMVC5Core.Models.Account.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <title>GAZETE KAPI | GİRİŞ </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Gazete Kapı Yönetim Paneliyle tüm haberlerinizi yönetin" name="description">
    <meta content="GKapı" name="author">
    <!-- App favicon -->
    <link rel="shortcut icon" href="assets/images/favicon.ico">

    <!-- Bootstrap Css -->
    <link href="https://uploads.gazetekapı.com/admin/wwwroot/assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css">
    <!-- Icons Css -->
    <link href="https://uploads.gazetekapı.com/admin/wwwroot/assets/css/icons.min.css" rel="stylesheet" type="text/css">
    <!-- App Css-->
    <link href="https://uploads.gazetekapı.com/admin/wwwroot/assets/css/app.min.css" id="app-style" rel="stylesheet" type="text/css">

</head>

<body>

    <!-- Loader -->
    <!-- Begin page -->
    <div class="accountbg" style="background: url('https://uploads.gazetekapı.com/images/bg.jpg'); background-size: cover; background-position: center;"></div>

    <div class="account-pages mt-5">
        @if (ViewBag.LTD != null)
        {
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-5 col-xl-4">
                        <div class="card">
                            <div class="card-body">
                                <div class="text-center">
                                    <label for="userpassword">Son Giriş Zamanı: @ViewBag.LTD</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-5 col-xl-4">
                    @Html.PartialAsync("~/Views/Shared/_ErrorMessage.cshtml").Result

                    <div class="card">
                        <div class="card-body">
                            <div class="text-center mt-3">
                                <div>
                                    <a href="@Url.Action("GirisYap","Yonetici")"><img src="https://uploads.gazetekapı.com/images/logo-dark.svg" height="90" alt="logo"></a>
                                </div>
                            </div>
                            <div class="p-3">
                                <form asp-controller="Yonetici" asp-action="GirisYap" class="form-horizontal" asp-route-returnUrl="@Context.Request.Query["ReturnUrl"]">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="mb-3">
                                        <label class="form-label" asp-for="UserName" for="username"></label>
                                        <input type="text" value="dogan123" autocomplete="off" class="form-control" asp-for="UserName" id="username" placeholder="Kullanıcı adını girin" />
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label" asp-for="Password" for="userpassword"></label>
                                        <input type="password" value="12345" autocomplete="off" class="form-control" id="userpassword" asp-for="Password" placeholder="Şifrenizi girin">
                                    </div>

                                    <div class="row mt-4">
                                        <div class="col-sm-12 text-end">
                                            <button class="btn btn-primary btn-block waves-effect waves-light" style="width:100%" type="submit">Giriş Yap</button>
                                        </div>
                                    </div>

                                </form>

                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <script src="https://uploads.gazetekapı.com/admin/wwwroot/assets/libs/jquery/jquery.min.js"></script>
    <script src="https://uploads.gazetekapı.com/admin/wwwroot/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="https://uploads.gazetekapı.com/admin/wwwroot/assets/libs/metismenu/metisMenu.min.js"></script>
    <script src="https://uploads.gazetekapı.com/admin/wwwroot/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="https://uploads.gazetekapı.com/admin/wwwroot/assets/libs/node-waves/waves.min.js"></script>

    <script src="https://uploads.gazetekapı.com/admin/wwwroot/assets/js/app.js"></script>

</body>
</html>

