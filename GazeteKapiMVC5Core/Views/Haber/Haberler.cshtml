@model IEnumerable<GazeteKapiMVC5Core.Models.News.NewsModel.NewsLıstItemModel>

@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/assets/css/pageline.css" rel="stylesheet" />

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-sm-12">
                        <h4 class="card-title">Haberler</h4>
                        <p class="card-title-desc">Haberler ile tüm işlemlerinizi gerçekleştirin</p>
                    </div>
                </div>
                <div class="table-rep-plugin">
                    <div class="table-responsive mb-0" data-bs-pattern="priority-columns">
                        <table id="datatable" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                            <thead>
                                <tr>
                                    <th style="text-align:center;">#</th>
                                    <th>Başlık</th>
                                    <th>Yayın Tarihi</th>
                                    <th>Okunma</th>
                                    <th>Haber Tipi</th>
                                    <th>Oluşturan</th>
                                    <th>Etiketler</th>
                                    <th>İşlem</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr class="button-items" id="tooltip-container">
                                        <td style="text-align:center;">@Html.DisplayFor(model => item.Id)</td>

                                        @if (item.Title.Length > 40)
                                        {
                                            <td>
                                                <a data-bs-container="#tooltip-container"
                                                   data-bs-toggle="tooltip"
                                                   data-bs-placement="top" title="Haberi Düzenle"
                                                   asp-action="HaberDuzenle" asp-controller="Haber" asp-route-id="@item.Id">@item.Title.Substring(0, 40)<span>...</span></a>
                                            </td>
                                        }
                                        else
                                        {
                                            <td>
                                                <a data-bs-container="#tooltip-container"
                                                   data-bs-toggle="tooltip"
                                                   data-bs-placement="top" title="Haberi Düzenle"
                                                   asp-action="HaberDuzenle" asp-controller="Haber" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Title)</a>
                                            </td>
                                        }

                                        <td>@Html.DisplayFor(model => item.PublishedTime)</td>
                                        <td>@Html.DisplayFor(model => item.Views)</td>
                                        <td>@Html.DisplayFor(model => item.categories.CategoryName)</td>
                                        <td>@Html.DisplayFor(model => item.users.DisplayName)</td>
                                        <td>@Html.DisplayFor(model => item.Tag)</td>
                                        <td>
                                            @if (item.IsLock == true)
                                            {
                                                <a style="padding:3px;" data-bs-container="#tooltip-container"
                                                   data-bs-toggle="tooltip" data-bs-placement="top"
                                                   title="Haber Erişimini Aç" asp-action="HaberiKilitle" asp-route-id="@item.Id"><i class="mdi mdi-lock-open mdi-24px text-success"></i></a>
                                            }
                                            else
                                            {
                                                <a style="padding:3px;" data-bs-container="#tooltip-container"
                                                   data-bs-toggle="tooltip" data-bs-placement="top"
                                                   title="Haberi Kilitle" asp-action="HaberiKilitle" asp-route-id="@item.Id"><i class="mdi mdi-lock mdi-24px text-danger"></i></a>
                                            }

                                            @if (item.IsActive == false)
                                            {
                                                <a style="padding:3px;" data-bs-container="#tooltip-container"
                                                   data-bs-toggle="tooltip" data-bs-placement="top"
                                                   title="Haberi Aktifleştir" asp-action="HaberiAktifEt" asp-route-id="@item.Id"><i class="mdi mdi-publish mdi-24px"></i></a>
                                            }
                                            else
                                            {
                                                <a style="padding:3px;" data-bs-container="#tooltip-container"
                                                   data-bs-toggle="tooltip" data-bs-placement="top"
                                                   title="Haberi Pasifleştir" asp-action="HaberiAktifEt" asp-route-id="@item.Id"><i class="mdi mdi-earth-remove text-danger mdi-24px"></i></a>

                                            }

                                            @if (item.IsOpenNotifications == true)
                                            {
                                                <a style="padding:3px;" data-bs-container="#tooltip-container"
                                                   data-bs-toggle="tooltip" data-bs-placement="top"
                                                   title="Bildirimleri Kapat" asp-action="BildirimleriAc" asp-route-id="@item.Id" class="ml-1"><i class="mdi mdi-wifi mdi-24px"></i></a>
                                            }
                                            else
                                            {
                                                <a style="padding:3px;" data-bs-container="#tooltip-container"
                                                   data-bs-toggle="tooltip" data-bs-placement="top"
                                                   title="Bildirimleri Aç" asp-action="BildirimleriAc" asp-route-id="@item.Id" class="ml-1"><i class="mdi mdi-wifi-off text-danger mdi-24px"></i></a>
                                            }

                                            @if (item.doublePlace == false)
                                            {
                                                <a style="padding:3px;" data-bs-container="#tooltip-container"
                                                   data-bs-toggle="tooltip" data-bs-placement="top"
                                                   title="İkiliye Yerleştir" asp-action="ikiliyeyerlestir" asp-route-id="@item.Id" class="ml-1"><i class="mdi mdi-chevron-double-up mdi-24px"></i></a>
                                            }

                                            else
                                            {
                                                <a style="padding:3px;" data-bs-container="#tooltip-container"
                                                   data-bs-toggle="tooltip" data-bs-placement="top"
                                                   title="İkiliden Yerleştir" asp-action="ikiliyeyerlestir" asp-route-id="@item.Id" class="ml-1"><i class="mdi mdi-chevron-double-up text-danger mdi-24px"></i></a>
                                            }
                                            @if (item.fourthPlace == false)
                                            {
                                                <a style="padding:3px;" data-bs-container="#tooltip-container"
                                                   data-bs-toggle="tooltip" data-bs-placement="top"
                                                   title="Dörtlüye Yerleştir" asp-action="dortluyeyerlestir" asp-route-id="@item.Id" class="ml-1"><i class="mdi mdi-application mdi-24px"></i></a>
                                            }

                                            else
                                            {
                                                <a style="padding:3px;" data-bs-container="#tooltip-container"
                                                   data-bs-toggle="tooltip" data-bs-placement="top"
                                                   title="Dörtlüye Yerleştir" asp-action="dortluyeyerlestir" asp-route-id="@item.Id" class="ml-1"><i class="mdi mdi-application text-danger mdi-24px"></i></a>
                                            }
                                            @if (item.isArchive == false)
                                            {
                                                <a style="padding:3px;" data-bs-container="#tooltip-container"
                                                   data-bs-toggle="tooltip" data-bs-placement="top"
                                                   title="Haberi Arşivle" asp-action="haberiarsivle" asp-route-id="@item.Id" class="ml-1"><i class="mdi mdi-archive mdi-24px"></i></a>
                                            }

                                            else
                                            {
                                                <a style="padding:3px;" data-bs-container="#tooltip-container"
                                                   data-bs-toggle="tooltip" data-bs-placement="top"
                                                   title="Haberi Arşivden Çıkar" asp-action="haberiarsivle" asp-route-id="@item.Id" class="ml-1"><i class="mdi mdi-archive text-danger mdi-24px"></i></a>
                                            }

                                            <a style="padding:3px;" data-bs-container="#tooltip-container"
                                               data-bs-toggle="tooltip" data-bs-placement="top"
                                               title="Haberi Çoğalt" asp-action="HaberCogalt" asp-route-id="@item.Id"><i class="mdi mdi-plus mdi-24px"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>