        }

        formdata.append("haberId", newsId);

        $.ajax({
            url: "/Haber/uploadVideoForNews",
            type: "POST",
            dataType: "json",
            data: formdata,
            contentType: false,
            cache: false,
            processData: false,
            success: function (data) {
                if (data != false) {
                    alert("Video yüklendi")
                    window.location.href = "/Haber/HaberDuzenle?Id=" + newsId;
                }
            },
            error: function (data) {
                if (data == false) {
                    alert("Video yüklenemedi!");
                    window.location.href = "/Haber/HaberDuzenle?Id=" + newsId;
                }
            }
        })
