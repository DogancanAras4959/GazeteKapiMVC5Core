@model GazeteKapiMVC5Core.Models.News.NewsModel.NewsEditViewModel
@using GazeteKapiMVC5Core.Models.News.NewsModel;
@using GazeteKapiMVC5Core.Models.Seo.SeoScore;
@using GazeteKapiMVC5Core.Models.Seo.SeoMeta;

@{
