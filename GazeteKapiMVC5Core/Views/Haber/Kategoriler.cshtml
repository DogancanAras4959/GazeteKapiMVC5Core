@model IEnumerable<GazeteKapiMVC5Core.Models.Category.CategoryListViewModel>
@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .link-disabled {
        pointer-events: none;
        cursor: default;
    }
    .table th {
        font-weight: 600;
        font-family: Roboto,sans-serif;
    }
</style>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-4">
                        <h4 class="card-title">Kategoriler</h4>
                        <p class="card-title-desc">Kategorileriniz ile tüm işlemlerinizi gerçekleştirin</p>
                    </div>
                    <div class="col-sm-8">
                        <div style="float:right;"><a asp-controller="Haber" asp-action="KategoriOlustur" class="btn btn-primary btn-sm">Kategori Oluştur <i class="fas fa-plus fa-sm"></i></a></div>
                    </div>
                </div>
                <div class="table-rep-plugin">
                    <div class="table-responsive mb-0" data-bs-pattern="priority-columns">
                        <table class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                            <thead>
                                <tr>
                                    <th>Kategori Adı</th>
                                    <th>Oluşturulma</th>
                                    <th>Güncellenme</th>
                                    <th>İşlem Yapan</th>
                                    <th>Durum</th>
                                    <th>İşlem</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(model => item.CategoryName)</td>
                                        <td>@Html.DisplayFor(model => item.CreatedTime)</td>
                                        <td>@Html.DisplayFor(model => item.UpdatedTime)</td>
                                        <td>@Html.DisplayFor(model => item.user.UserName)</td>

                                        @if (item.IsActive == true)
                                        {
                                            <td><span class="text-success"><strong>Aktif</strong></span></td>
                                            <td>
                                                <a style="padding:3px;" asp-action="KategoriDurumDuzenle" asp-route-id="@item.Id"><i class="mdi mdi-lock-open mdi-24px text-success"></i></a>
                                                <a style="padding:3px;" asp-action="KategoriDuzenle" asp-route-id="@item.Id"><i class="mdi mdi-account-edit mdi-24px"></i></a>
                                                <a style="padding:3px;" asp-action="KategoriSil" asp-route-id="@item.Id" class="text-danger ml-1 link-disabled" onclick="return confirm('Bu kategoriyi silmek istiyor musunuz?')"><i class="mdi mdi-delete-circle mdi-24px"></i></a>
                                            </td>
                                        }
                                        else
                                        {
                                            <td><span class="text-danger"><strong>Pasif</strong></span></td>
                                            <td>
                                                <a style="padding:3px;" asp-action="KategoriDurumDuzenle" asp-route-id="@item.Id"><i class="mdi mdi-lock mdi-24px text-danger"></i></a>
                                                <a style="padding:3px;" asp-action="KategoriDuzenle" class="link-disabled" asp-route-id="@item.Id"><i class="mdi mdi-account-edit mdi-24px"></i></a>
                                                <a style="padding:3px;" asp-action="KategoriSil" asp-route-id="@item.Id" class="text-danger ml-1 link-disabled" onclick="return confirm('Bu kategoriyi silmek istiyor musunuz?')"><i class="mdi mdi-delete-circle mdi-24px"></i></a>
                                            </td>
                                        }

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>