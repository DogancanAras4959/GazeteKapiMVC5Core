@model GazeteKapiMVC5Core.Models.News.NewsModel.NewsCreateViewModel

@{
    ViewData["Title"] = "HaberOlustur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@functions{
    public string GetAntiXsrfRequestToken()
    {
        return Xsrf.GetAndStoreTokens(Context).RequestToken;
    }
}


<link href="https://uploads.gazetekapı.com/admin/wwwroot/assets/css/pageline.css" rel="stylesheet" />

<form method="post" asp-action="HaberOlustur" asp-controller="Haber" enctype="multipart/form-data">
    <div class="row">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-body">
                    <div class="mb-3">
                        <input asp-for="Title" autocomplete="off" data-toggle="tooltip" data-placement="bottom" class="form-control" type="text" placeholder="Haber için başlık giriniz" id="example-text-input">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <textarea asp-for="Spot" autocomplete="off" rows="4" cols="50" data-toggle="tooltip" data-placement="bottom" class="form-control" type="text" placeholder="Haber için spot giriniz" id="example-text-input"></textarea>
                        <span asp-validation-for="Spot" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <textarea asp-for="NewsContent" rows="3" cols="150" class="ckeditor"></textarea>
                        <span asp-validation-for="NewsContent" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="example-text-input" class="col-sm-12 col-form-label">Etiket (Zorunlu Değildir - SEO için önerilir)</label>
                        <input asp-for="Tag" autocomplete="off" data-toggle="tooltip" name="Tag" data-placement="bottom" class="form-control" type="text" placeholder="Haber için etiketler giriniz" id="example-text-input">
                    </div>
                    <div class="mb-3">
                        <label for="example-text-input" class="col-sm-12 col-form-label">Haber Ayarları</label>
                        <div class="row">
                            <div class="col-sm-4">
                                <select asp-for="PublishTypeId" asp-items="@ViewBag.PublishTypes" class="form-control">
                                    <option selected="selected" value="999">Haber tipi seçiniz (Zorunlu)</option>
                                </select>
                            </div>
                            <div class="col-sm-4">
                                <select asp-for="GuestId" asp-items="@ViewBag.Guests" class="form-control">
                                    <option selected="selected" value="999">Yazar seçiniz (Zorunlu Değildir)</option>
                                </select>
                            </div>
                            <div class="col-sm-4">
                                <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-control">
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-4">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card">
                        <div class="card-body">
                            <img id="img" style="width:100%" src="https://uploads.gazetekapı.com/images/imgdefault.jpg" />
                            <label style="margin-top:10px;" class="col-sm-12 text-center">*(835x510 dosya boyutu)</label>
                            <label for="example-text-input" class="col-sm-12 col-form-label text-center">Öne Çıkan Görsel Belirle</label>
                            <input type="file" class="filestyle" id="upload" data-input="false" name="file" data-buttonname="btn-secondary">
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-1">
                                    <input type="checkbox" asp-for="IsCommentActive" />
                                </div>
                                <div class="col-sm-11">
                                    <label class="col-sm-11">Haberi yorumlara aç</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-1">
                                    <input type="checkbox" asp-for="IsOpenNotifications" />
                                </div>
                                <div class="col-sm-11">
                                    <label class="col-sm-11">Haber bildirimlerini etkinleştir</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-1">
                                    <input type="checkbox" asp-for="IsSlide" />
                                </div>
                                <div class="col-sm-11">
                                    <label class="col-sm-11">Haberi manşete taşı</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="card">
                        <div class="card-body">
                            <button type="submit" style="width:100%" class="btn btn-primary">Haberi Oluştur</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<script src="https://uploads.gazetekapı.com/admin/wwwroot/ckeditor/ckeditor.js"></script>
<script src="https://uploads.gazetekapı.com/admin/wwwroot/assets/libs/jquery/jquery.min.js"></script>

<script>
    $(function () {
        $('#upload').change(function () {
            var input = this;
            var url = $(this).val();
            var ext = url.substring(url.lastIndexOf('.') + 1).toLowerCase();
            if (input.files && input.files[0] && (ext == "gif" || ext == "png" || ext == "jpeg" || ext == "jpg")) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#img').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
            else {
                $('#img').attr('src', '~/assets/Files/user.png');
            }
        });

    });
</script>

<script>
    $(function () {
        var config = {
            toolbar:
                [
                    ['Bold', 'Italic', 'Underline', 'Strike', '-', 'Subscript', 'Superscript'],
                    ['NumberedList', 'BulletedList', '-', 'Blockquote'],
                    ['Styles', 'Format'],
                    ['Undo', 'Redo', '-', 'Find', 'Replace', '-', 'SelectAll'],
                ],

            contentsCss: ["body {font-size: 18px;}"],

            /*uiColor: ['#ff0000'],*/
        };

        $('#cke_NewsContent').ckeditor(config);
    });
</script>