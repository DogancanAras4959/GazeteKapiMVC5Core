@model GazeteKapiMVC5Core.Models.News.GuestModel.GuestEditViewModel

@{
    ViewData["Title"] = "YazarDetay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                @if (Model.IsActive == true)
                {
                    <div class="profile-widget text-center">
                        <img src="~/Files/@Model.GuestImage" class="avatar-lg rounded-circle img-thumbnail" alt="img">
                        <h5 class="mt-3">@Model.GuestName</h5>
                        <p>Admin</p> @*Bu bölüm roller için olacak*@

                        <p class="text-muted mb-1">
                            Oluşturulma: <strong>@Model.CreatedTime</strong>
                        </p>
                        <p class="text-muted">
                            Son Düzenlenme: <strong>@Model.UpdatedTime</strong>
                        </p>
                        @if (Model.Email != null)
                        {
                            <p class="text-muted">
                                Eposta: <strong>@Model.Email</strong>
                            </p>
                        }
                        <a asp-action="YazarDuzenle" asp-controller="Haber" asp-route-id="@Model.Id" class="btn btn-sm btn-purple mt-2">Yöneticiyi Düzenle</a> 
                    </div>
                }
                else
                {
                    <div class="profile-widget text-center">
                        <img src="~/Files/@Model.GuestImage" class="avatar-lg rounded-circle img-thumbnail" alt="img">
                        <h5 class="mt-3">@Model.GuestName</h5>
                        <p>Admin</p> @*Bu bölüm roller için olacak*@

                        <p class="text-danger mb-1">
                            <strong>Bu yazar kilitlenmiştir</strong>
                        </p>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-4">
                                <h4 class="card-title">Yazılar</h4>
                                <p class="card-title-desc"></p>
                            </div>
                            <div class="col-sm-8">
                                <div style="float:right;"><a asp-controller="Haber" asp-action="YazarinTumHaberleri" class="btn btn-primary btn-sm">Yazıları Görün</a></div>
                            </div>
                        </div>
                        <div class="table-rep-plugin">
                            <div class="table-responsive mb-0" data-bs-pattern="priority-columns">
                                <table id="tech-companies-1" class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Başlık</th>
                                            <th>Oluşturulma</th>
                                            <th>Güncellenme</th>
                                            <th>Durum</th>
                                            <th>İşlem</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div> 
    </div>
</div>

