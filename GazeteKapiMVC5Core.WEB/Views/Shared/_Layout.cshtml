<!DOCTYPE html>
<html lang="">

<head>
    <meta charset="utf-8">
    <title>Gazete Kapı</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="manifest" href="site.webmanifest">
    <!-- favicon.ico in the root directory -->
    <link rel="apple-touch-icon" href="icon.png">

    <meta name="theme-color" content="#030303">
    <!-- google fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,300;0,500;0,700;1,300;1,500&family=Poppins:ital,wght@0,300;0,500;0,700;1,300;1,400&display=swap"
          rel="stylesheet">
    @*<link href="./css/styles.css?537a1bbd0e5129401d28" rel="stylesheet">*@
    <link href="~/css/styles.css" rel="stylesheet" />
    
    <style>
        body {
            font: normal 100%/1.4 "Montserrat",sans-serif;
        }
        .sm-background {
            border-radius: 100%;
            background-color: #000;
            width: 2em;
            height: 2em;
            position: relative;
            top: 5px;
            margin-left: 10px;
        }

        .sm-link{
            top:0px;
            right:2px;
            position:relative;
        }

        .menu-rect {
            width: 13px;
            height: 13px;
            background-color: #f4c625;
            float: right;
            position: relative;
            top: 4px;
            left: 5px;
        }

        .navbar-soft .navbar-nav .nav-item {
            margin-left: 25px;
            margin-right: 5px;
        }

        .nav-link-search {
            position: relative;
            top: 6px;
            color: #000;
        }
        .navbar a:hover{
            color:#000;
            text-decoration:none;
        }

        .logo-img {
            height: 145px;
            padding: 15px 0px;
        }

        .menu-link {
            font-weight: 700;
            font-size: 17px;
            color: #515d5e;
        }

        .navbar a {
            color: #515d5e;
        }
        .topbar .topbar-right .topbar-sosmed li a {
            color: #f4c625;
            font-size: 16px;
        }
        .topbar .topbar-right .topbar-sosmed li {
            list-style: none;
            float: left;
            font-size: 14px;
            padding: 0 5px;
        }
        .topbar .topbar-right .topbar-sosmed {
            display: inline-table;
            padding: 0px;
            padding-left: 0;
            margin: 0;
            position: relative;
            top: 10px;
        }
    </style>

</head>

<body>

    @await Component.InvokeAsync("HeaderWeb")

    @RenderBody()

    @await Component.InvokeAsync("FooterWeb")

    <a href="javascript:" id="return-to-top"><i class="fa fa-chevron-up"></i></a>

    @*<script type="text/javascript" src="./js/index.bundle.js?537a1bbd0e5129401d28"></script>*@
    <script src="~/js/index.bundle.js"></script>
</body>

