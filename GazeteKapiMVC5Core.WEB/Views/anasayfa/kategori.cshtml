@using CORE.ApplicationCommon.Helpers;
@using GazeteKapiMVC5Core.WEB.Models.MetaConfig
@model PaginationList<GazeteKapiMVC5Core.WEB.ViewModels.News.NewListViewModelWeb>

@{
    ViewData["Title"] = "kategori";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string category = TempData["kategori"].ToString();
}

@{
    var prevDisabled = !Model.HasPrevious ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";

}

<link href="https://uploads.gazetekapi.com/front/wwwroot/css/base/pagelineweb.css" rel="stylesheet" />
<link href="https://uploads.gazetekapi.com/front/wwwroot/css/base/base.css" rel="stylesheet" />

<style>
    .title-word-sm {
        background-color: #f4c625;
        width: 40px;
        height: 40px;
        display: inline-block;
        align-items: center;
    }

    .prev, .next-sm-cat {
        cursor: pointer;
        position: relative;
        top: 2%;
        width: auto;
        padding: 0px;
        margin-top: -22px;
        color: white;
        font-weight: 700;
        font-size: 30px;
        transition: 0.6s ease;
        /* border-radius: 0 3px 3px 0; */
        user-select: none;
    }

    .wrap__section {
        padding-top: 30px;
        padding-bottom: 60px;
    }
</style>

<section class="wrap__section bg-light">
    <div class="container boxed">
        <div class="row">
            <div class="col-md-12">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-md-6 col-sm-12 text-center">
                            <div class="title-word-sm">
                                <a class="next-sm-cat" style="color:#515d5e;">@category.Substring(0, 1).ToUpper()</a>
                            </div>
                        </div>
                    </div>

                    <div class="row justify-content-center" style="margin-top:15px;">
                        <div class="col-md-6 col-sm-12 text-center">
                            <h3>
                                @TempData["kategori"]
                            </h3>
                        </div>
                    </div>

                    <div class="wrapper__list__article">
                        <h4 class="border_section"></h4>
                    </div>

                    <div class="row mt-2">
                        @foreach (var item in Model.OrderByDescending(x => x.Id).Where(x => x.IsActive == true && x.IsLock == false))
                        {
                            <div class="col-lg-4" style="margin-top:30px;">
                                <!-- Post Article -->
                                <div class="article__entry-new">
                                    @*<div class="article__category">

                                            @item.categories.CategoryName
                                        </div>*@
                                    <div class="article__image articel__image__transition">
                                        <a href="@Url.Action("haber","anasayfa", new { Id = item.Id, Title = item.GenerateSlug() })">
                                            <img src="https://uploads.gazetekapi.com/images/@item.Image" alt="" class="img-fluid">
                                        </a>
                                    </div>
                                    <div class="text-cat">
                                        <h5>
                                            @if (item.Title.Length > 40)
                                            {
                                                <a href="@Url.Action("haber","anasayfa", new { Id = item.Id, Title = item.GenerateSlug() })">
                                                    @item.Title.Substring(0, 40)<span>...</span>
                                                </a>
                                            }
                                            else
                                            {
                                                <a href="@Url.Action("haber","anasayfa", new { Id = item.Id, Title = item.GenerateSlug() })">
                                                    @item.Title
                                                </a>
                                            }

                                        </h5>
                                    </div>

                                </div>
                            </div>
                        }
                        <div class="clerfix"></div>
                    </div>

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="mt-4">
                    <div class="pagination-area">
                        <div class="pagination wow fadeIn animated" data-wow-duration="2s" data-wow-delay="0.5s"
                             style="visibility: visible; animation-duration: 2s; animation-delay: 0.5s; animation-name: fadeIn;">
                            <a asp-action="kategori" class="btn btn-link">Başa Dön</a>
                            <a asp-action="kategori" asp-route-pageNumber="@(Model.PageIndex-1)" class="btn btn-link @prevDisabled">Önceki</a>
                            <a asp-action="kategori" asp-route-pageNumber="@(Model.PageIndex+1)" class="btn btn-link @nextDisabled">Sonraki</a>
                        </div>
                    </div>
                    <!-- End pagination -->
                </div>
            </div>
        </div>
    </div>
</section>