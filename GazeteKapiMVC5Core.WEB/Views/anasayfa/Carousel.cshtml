@using GazeteKapiMVC5Core.WEB.ViewModels.News;

@{
    List<NewListViewModelWeb> haberlerManset = ViewBag.HaberlerManset as List<NewListViewModelWeb>;
    int count = 0;
}

<link href="~/assets/css/slider.css" rel="stylesheet" />

<div class="top__news__slider">

    @foreach (var item in haberlerManset.OrderByDescending(x => x.CreatedTime).Where(x => x.IsActive == true && x.IsLock == false).ToList())
    {
        if (item.IsSlide == false && item.fourthPlace == true)
        {

            count++;

            <div class="item">
                <!-- Post Article -->
                <div class="article__entry">
                    <div class="article__image">
                        <a href="@Url.Action("haber","anasayfa", new { Id = item.Id, Title = item.GenerateSlug() })">
                            <img src="https://uploads.gazetekapi.com/images/@item.Image" alt="@item.Image" title="@item.Image" style="height: 140px;" class="img-fluid carousel-img-m" loading="lazy" />
                        </a>
                    </div>
                    <div class="article__content">
                        <h5 style="font-size:15px;" class="article_title-mobile">
                            @if (item.Title.Length > 50)
                            {<a href="@Url.Action("haber", "anasayfa", new { Id = item.Id, Title = item.GenerateSlug() })">@item.Title.Substring(0, 50)<span>...</span> </a>}
                        else
                        {
                            <a href="@Url.Action("haber","anasayfa", new { Id = item.Id, Title = item.GenerateSlug() })">@item.Title</a>
                        }
                        </h5>
                    </div>
                </div>
            </div>

            if (count == 4)
            {
                count = 0;
                break;
            }


        }
    }

</div>