@using GazeteKapiMVC5Core.WEB.ViewModels.News;
@using GazeteKapiMVC5Core.WEB.ViewModels.TagsNews
@using GazeteKapiMVC5Core.WEB.ViewModels.Categories
@using Microsoft.AspNetCore.Http.Extensions;
@using System.Web;
@using System.Globalization;

@{
    ViewData["Title"] = "haber";
    Layout = "~/Views/Shared/_Layout.cshtml";

    List<TagNewsListViewModelWeb> tagList = ViewBag.TagNews as List<TagNewsListViewModelWeb>;
    List<CategoryListViewModelWeb> categories = ViewBag.CategotyList as List<CategoryListViewModelWeb>;
    List<NewListViewModelWeb> newListRelational = ViewBag.Relational as List<NewListViewModelWeb>;
    List<NewListViewModelWeb> newsListPopularite = ViewBag.Popularite as List<NewListViewModelWeb>;
    List<NewListViewModelWeb> newsListPopulariteByCategory = ViewBag.PopulariteByCategory as List<NewListViewModelWeb>;
    List<NewListViewModelWeb> newListByCategory = ViewBag.CategoryNewsByIdScroll as List<NewListViewModelWeb>;
    List<NewListViewModelWeb> newListAll = ViewBag.AllNewsList as List<NewListViewModelWeb>;

    string name = "";
    int count = 0;
    string text = ViewBag.Content;

}

<style>
    .headphone-cs {
        padding: 5px;
        height: 35px;
        width: 35px;
        position: relative;
        bottom: 3px;
    }

    .article__entry .article__content ul.list-inline li.list-inline-item span {
        font-size: 14px;
        font-weight: 700;
        text-transform: capitalize;
        font-family: "Montserrat",sans-serif;
    }

    .card__post .card__post__body .card__post__content .card__post__author-info .list-inline .list-inline-item span {
        color: #fff;
        font-weight: 700;
        font-size: 13px;
    }

    .card__post .card__post__body {
        padding-top: 8px;
        display: flex;
        align-items: center;
    }

    .text-rect-hot-news {
        background-color: #f4c625;
        padding: 5px;
        font-size: 11px !important;
        color: #54626b !important;
        font-weight: 700;
        text-transform: uppercase;
    }

    .wrap__article-detail-content .total-views .list-inline {
        padding-bottom: 15px !important;
        padding-top: 0px !important;
        float: right;
    }
</style>

<link href="https://uploads.gazetekapı.com/front/wwwroot/css/loading.css" rel="stylesheet" />
<link href="https://uploads.gazetekapı.com/front/wwwroot/css/base/pagelinenews.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<section class="bg-white pb-60" id="newSection">
    <div class="container boxed">
        <div class="row">

            <div class="col-md-8" id="newLoadSection">
                <div class="wrap__article-detail">
                    <div class="wrap__article-detail-title">
                        <h1>
                            @Model.Title
                        </h1>
                        <hr />
                        <h3>
                            @Model.Spot
                        </h3>
                    </div>
                    <br />
                    <div class="wrap_article-detail-info">
                        <ul class="list-inline">
                            <li class="list-inline-item">
                                <span class="text-dark text-capitalize ml-1">
                                    <i class="fa fa-clock-o"></i>
                                    @Model.PublishedTime.ToString("MM/dd/yyyy HH:mm")
                                </span>
                            </li>
                            <li class="list-inline-item" style="float:right;">
                                @if (Model.Sound != null || Model.Sound == "")
                                {

                                    <audio id="player" src="https://uploads.gazetekapı.com/sounds/@Model.Sound" type="audio/ogg">
                                    </audio>
                                    <img src="https://uploads.gazetekapı.com/images/headphone.svg" class="headphone-cs" />
                                    <a class="btn-sound" onclick="document.getElementById('player').playbackRate=2" style="padding:5px; font-weight:900; font-size:17px;">2x</a>
                                    <a class="btn-sound" onclick="document.getElementById('player').playbackRate=1" style="padding:5px; font-weight:700; font-size:17px;">1x</a>
                                    <a class="btn-sound" onclick="document.getElementById('player').play()"><i style="font-size: 17px; padding: 5px;" class="fa fa-play"></i></a>
                                    <a class="btn-sound" onclick="document.getElementById('player').pause()"><i style="font-size: 17px; padding: 5px;" class="fa fa-pause"></i></a>
                                }
                            </li>
                        </ul>
                    </div>

                    <div class="wrap__article-detail-image">
                        <div class="img-cat">
                            @foreach (var category in categories)
                            {

                                if (category.Id == Model.CategoryId)
                                {
                                    name = category.CategoryName;
                                    break;
                                }
                            }

                            <a asp-action="kategori" asp-controller="anasayfa" asp-route-id="@Model.CategoryId">
                                <span class="text-rect">@name.Substring(0, 1).ToUpper()</span>
                            </a>
                        </div>
                        <figure>
                            <img src="https://uploads.gazetekapı.com/images/@Model.Image" alt="" class="img-fluid">
                        </figure>
                    </div>
                </div>

                <div class="wrap__article-detail-content">
                    <div class="total-views">
                        <ul class="list-inline">
                            <li class="list-inline-item">
                                <a class="btn btn-social-o facebook"
                                   href="#" target="_blank" rel="noopener noreferrer nofollow">
                                    <i class="fa fa-facebook-f"></i>
                                    @*<span>facebook</span>*@
                                </a>

                            </li>
                            <li class="list-inline-item">
                                <a class="btn btn-social-o twitter" href="#" target="_blank" rel="noopener noreferrer nofollow">
                                    <i class="fa fa-twitter"></i>
                                    @*<span>twitter</span>*@
                                </a>
                            </li>
                            <li class="list-inline-item">
                                <a class="btn btn-social-o whatsapp" href="#">
                                    <i class="fa fa-whatsapp"></i>
                                    @*<span>whatsapp</span>*@
                                </a>
                            </li>
                            <li class="list-inline-item">
                                <a class="btn btn-social-o telegram" href="#">
                                    <i class="fa fa-telegram"></i>
                                    @*<span>telegram</span>*@
                                </a>
                            </li>

                            <li class="list-inline-item">
                                <a class="btn btn-linkedin-o linkedin" href="#" target="_blank" rel="noopener noreferrer nofollow">
                                    <i class="fa fa-envolepe"></i>
                                    @*<span>gmail</span>*@
                                </a>
                            </li>

                        </ul>
                    </div>
                    <p @*id="contentnews"*@>
                        @Html.Raw(Model.NewsContent)
                    </p>

                    <!-- Blockquote  -->
                </div>

                <div class="blog-tags">
                    <ul class="list-inline">
                        <li class="list-inline-item">
                            <i class="fa fa-tags">
                            </i>
                        </li>
                        @foreach (var item in tagList)
                        {
                            <li class="list-inline-item">
                                <a href="@Url.Action("aramasonucu", "anasayfa", new { TagId = item.TagId })" class="tag-link">
                                    @item.tag.TagName
                                </a>
                            </li>
                        }
                    </ul>
                </div>

                <div class="related-article">
                    <div class="article__entry-carousel-three">
                        @foreach (var item in newListRelational)
                        {
                            if (item.Id != Model.Id)
                            {
                                count++;
                                <div class="item">
                                    <!-- Post Article -->
                                    <div class="article__entry">
                                        <div class="article__image">
                                            <a href="@Url.Action("haber", "anasayfa", new { Id = item.Id, Title = item.GenerateSlug() })">
                                                <img src="https://uploads.gazetekapı.com/images/@item.Image" alt="" class="img-fluid">
                                            </a>
                                        </div>
                                        <div class="article__content">
                                            <ul class="list-inline">
                                                <li class="list-inline-item">
                                                    <span>
                                                        @item.PublishedTime.Value.ToString("MM/dd/yyyy HH:mm")
                                                    </span>
                                                </li>

                                            </ul>
                                            <h5 style="margin-top:10px;">
                                                @if (item.Title.Length > 50)
                                                {
                                                    <a href="@Url.Action("haber","anasayfa", new { Id = item.Id, Title = item.GenerateSlug() })">
                                                        @item.Title.Substring(0, 50)<span>...</span>
                                                    </a>
                                                }
                                                else
                                                {
                                                    <a href="@Url.Action("haber","anasayfa", new { Id = item.Id, Title = item.GenerateSlug() })">
                                                        @item.Title
                                                    </a>
                                                }
                                            </h5>

                                        </div>
                                    </div>
                                </div>

                                if (count == 3)
                                {
                                    count = 0;
                                    break;
                                }

                            }
                        }
                    </div>
                </div>

                <!-- SONSUZ SAYFA -->
                <div class="wrapper__list__article mt-4" id="anyTable">
                </div>
                <div class="loadingProgress" style="display:none;"><i class="fa fa-spinner fa-spin" style="font-size:18px"></i></div>
            </div>

            <div class="col-md-4">

                <aside class="wrapper__list__article">
                    <!-- Form Subscribe -->
                    <form asp-action="aramasonucu" asp-controller="anasayfa">
                        <div class="input-group">

                            <input type="search" class="form-control" name="searchnews" placeholder="Arama yapın...">
                            <div class="input-group-append">
                                <button class="btn btn-primary"><i class="fa fa-search"></i></button>
                            </div>

                        </div>
                    </form>
                </aside>

                <aside class="wrapper__list__article">
                    <h4 class="border_section"> Tüm Haberler </h4>
                    <div class="wrapper__list__article-small">

                        @foreach (var item in newListAll.OrderByDescending(x => x.PublishedTime).Take(10))
                        {
                            <div class="mb-3">
                                <!-- Post Article -->
                                <div class="card__post card__post-list">
                                    <div class="image-sm">
                                        <a href="@Url.Action("haber","anasayfa", new { Id = item.Id, Title = item.GenerateSlug() })">
                                            <img src="https://uploads.gazetekapı.com/images/@item.Image" class="img-fluid" alt="">
                                        </a>
                                    </div>


                                    <div class="card__post__body ">
                                        <div class="card__post__content">

                                            <div class="card__post__author-info mb-1">
                                                <ul class="list-inline">
                                                    <li class="list-inline-item">
                                                        <a asp-action="kategori" asp-controller="anasayfa" asp-route-id="@Model.CategoryId">
                                                            <span class="text-rect-hot-news">@item.categories.CategoryName</span>
                                                        </a>
                                                    </li>
                                                </ul>
                                                <ul class="list-inline" style="margin-top:15px;">
                                                    <li class="list-inline-item">
                                                        <i class="fa fa-clock-o"></i>
                                                        <span class="text-dark text-capitalize">
                                                            @item.PublishedTime.Value.ToString("MM/dd/yyyy HH:mm")
                                                        </span>
                                                    </li>
                                                </ul>
                                            </div>
                                            <div class="card__post__title">
                                                <h6>
                                                    @if (item.Title.Length > 40)
                                                    {
                                                        <a href="@Url.Action("haber","anasayfa", new { Id = item.Id, Title = item.GenerateSlug() })">
                                                            @item.Title.Substring(0, 40)<span>...</span>
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <a href="@Url.Action("haber","anasayfa", new { Id = item.Id, Title = item.GenerateSlug() })">
                                                            @item.Title
                                                        </a>
                                                    }
                                                </h6>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </aside>

                <aside class="wrapper__list__article">
                    <h4 class="border_section"> </h4>
                    <div class="wrapper__list__article-small">

                        <a href="#">
                            <figure>
                                <img src="https://uploads.gazetekapı.com/images/banner.jpg" alt="" class="img-fluid">
                            </figure>
                        </a>

                    </div>
                </aside>

                <aside class="wrapper__list__article">
                    <h4 class="border_section"> Öne Çıkan Haberler </h4>
                    <div class="wrapper__list__article-small">

                        @foreach (var item in newsListPopularite.OrderByDescending(x => x.Views).Take(5))
                        {
                            <div class="mb-3">
                                <!-- Post Article -->
                                <div class="card__post card__post-list">
                                    <div class="image-sm">
                                        <a href="@Url.Action("haber","anasayfa", new { Id = item.Id, Title = item.GenerateSlug() })">
                                            <img src="https://uploads.gazetekapı.com/images/@item.Image" class="img-fluid" alt="">
                                        </a>
                                    </div>


                                    <div class="card__post__body ">
                                        <div class="card__post__content">

                                            <div class="card__post__author-info mb-1">
                                                <ul class="list-inline">
                                                    <li class="list-inline-item">
                                                        <a asp-action="kategori" asp-controller="anasayfa" asp-route-id="@Model.CategoryId">
                                                            <span class="text-rect-hot-news">@item.categories.CategoryName</span>
                                                        </a>
                                                    </li>
                                                </ul>
                                                <ul class="list-inline" style="margin-top:15px;">
                                                    <li class="list-inline-item">
                                                        <i class="fa fa-clock-o"></i>
                                                        <span class="text-dark text-capitalize">
                                                            @item.PublishedTime.Value.ToString("MM/dd/yyyy HH:mm")
                                                        </span>
                                                    </li>
                                                </ul>
                                            </div>
                                            <div class="card__post__title">
                                                <h6>
                                                    @if (item.Title.Length > 40)
                                                    {
                                                        <a href="@Url.Action("haber","anasayfa", new { Id = item.Id, Title = item.GenerateSlug() })">
                                                            @item.Title.Substring(0, 40)<span>...</span>
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <a href="@Url.Action("haber","anasayfa", new { Id = item.Id, Title = item.GenerateSlug() })">
                                                            @item.Title
                                                        </a>
                                                    }
                                                </h6>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </aside>

            </div>
        </div>
        </div>
</section>

