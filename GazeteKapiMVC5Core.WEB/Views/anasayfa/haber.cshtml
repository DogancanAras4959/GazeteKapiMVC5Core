<section class="bg-white pb-60" id="newSection">
    <div class="container">
        <div class="row">

            <div class="col-md-8" id="newLoadSection">
                <div class="wrap__article-detail">
                    <div class="wrap__article-detail-title">
                        <h1>
                            @Model.Title
                        </h1>
                        <hr />
                        <h3>
                            @Model.Spot
                        </h3>
                    </div>
                    <br />
                    <div class="wrap_article-detail-info">
                        <ul class="list-inline">
                            <li class="list-inline-item">

                                @foreach (var category in categories)
                                {

                                    if (category.Id == Model.CategoryId)
                                    {
                                        name = category.CategoryName;
                                        break;
                                    }
                                }

                                <a asp-action="kategori" asp-controller="anasayfa" asp-route-id="@Model.CategoryId">
                                    <span class="text-rect">@name</span>
                                </a>
                            </li>
                            <li class="list-inline-item" style="float:right; margin-right:0; padding-left:15px;">
                                <a asp-controller="anasayfa" asp-action="stopToNewsDetail"><i class="fa fa-stop"></i></a>
                            </li>
                            <li class="list-inline-item" style="float:right; margin-right:0; padding-left:15px;">
                                <a href="@Url.Action("play","anasayfa", new { Id = Model.Id })"><i class="fa fa-play"></i></a>
                            </li>
                            <li class="list-inline-item">
                                <span class="ml-1">
                                    <i class="fa fa-eye"></i>
                                    @Model.Views
                                </span>
                            </li>
                            <li class="list-inline-item" style="float:right;">
                                <span class="text-dark text-capitalize ml-1">
                                    <i class="fa fa-clock-o"></i>
                                    @Model.PublishedTime
                                </span>
                            </li>
                        </ul>
                    </div>
  
                    <div class="wrap__article-detail-image">
                        <figure>
                            <img src="~/Files/@Model.Image" alt="" class="img-fluid">
                        </figure>
                    </div>

                    <div class="wrap__article-detail-content">

                        <p class="has-drop-cap-fluid" id="contentnews">
                            @Html.Raw(Model.NewsContent)
                        </p>

                        <!-- Blockquote  -->
                    </div>
                </div>

                <!-- News Tags -->
                <div class="blog-tags">
                    <ul class="list-inline">
                        <li class="list-inline-item">
                            <i class="fa fa-tags">
                            </i>
                        </li>
                        @foreach (var item in tagList)
                        {
                            <li class="list-inline-item">
                                <a href="@Url.Action("aramasonucu", "anasayfa", new { TagId = item.TagId })" class="tag-link">
                                    @item.tag.TagName
                                </a>
                            </li>
                        }
                    </ul>
                </div>

                <div class="related-article">
                    <div class="article__entry-carousel-three">
                        @foreach (var item in newListRelational)
                        {
                            if (item.Id != Model.Id)
                            {
                                count++;
                                <div class="item">
                                    <!-- Post Article -->
                                    <div class="article__entry">
                                        <div class="article__image">
                                            <a href="@Url.Action("haber", "anasayfa", new { Id = item.Id, Title = item.GenerateSlug() })">
                                                <img src="~/Files/@item.Image" alt="" class="img-fluid">
                                            </a>
                                        </div>
                                        <div class="article__content">
                                            <ul class="list-inline">
                                                <li class="list-inline-item">
                                                    <span>
                                                        @item.PublishedTime
                                                    </span>
                                                </li>

                                            </ul>
                                            <h5>
                                                <a href="@Url.Action("haber", "anasayfa", new { Id = item.Id, Title = item.GenerateSlug() })">
                                                    @item.Title
                                                </a>
                                            </h5>

                                        </div>
                                    </div>
                                </div>

                                if (count == 3)
                                {
                                    count = 0;
                                    break;
                                }

                            }
                        }
                    </div>
                </div>

                @*<div class="load-more" id="loading">
                        @{Html.BeginForm("LoadNewsView", "anasayfa");}
                    </div>*@
                <div id="load-more-message" class="loading">Loading&#8230;</div>
                <div id="load-more">
                   @*@{ await Html.RenderPartialAsync("loadData", newListByCategory);}*@
                </div>
            </div>

            <div class="col-md-4">

                <aside class="wrapper__list__article">
                    <!-- Form Subscribe -->
                    <form asp-action="aramasonucu" asp-controller="anasayfa">
                        <div class="input-group">

                            <input type="search" class="form-control" name="searchnews" placeholder="Arama yapın...">
                            <div class="input-group-append">
                                <button class="btn btn-primary"><i class="fa fa-search"></i></button>
                            </div>

                        </div>
                    </form>
                </aside>

                <aside class="wrapper__list__article">
                    <div class="wrapper__list__article-small">
                        <!-- Post Article -->
                        @foreach (var item in newsListPopularite)
                        {
                            <div class="mb-3">
                                <!-- Post Article -->
                                <div class="card__post card__post-list">
                                    <div class="image-sm">
                                        <a href="@Url.Action("haber","anasayfa", new { Id = item.Id, Title = item.GenerateSlug() })">
                                            <img src="~/Files/@item.Image" class="img-fluid" alt="">
                                        </a>
                                    </div>


                                    <div class="card__post__body ">
                                        <div class="card__post__content">

                                            <div class="card__post__author-info mb-2">
                                                <ul class="list-inline">

                                                    <li class="list-inline-item">
                                                        <span class="text-dark text-capitalize">
                                                            @item.PublishedTime
                                                        </span>
                                                    </li>

                                                </ul>
                                            </div>
                                            <div class="card__post__title">
                                                <h6>
                                                    <a href="@Url.Action("haber","anasayfa", new { Id = item.Id, Title = item.GenerateSlug() })">
                                                        @item.Title
                                                    </a>
                                                </h6>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </aside>

                <aside class="wrapper__list__article">
                    <h4 class="border_section"></h4>
                    <a href="#">
                        <figure>
                            <img src="~/Files/reklam.jpg" alt="" class="img-fluid">
                        </figure>
                    </a>
                </aside>

                <aside class="wrapper_list_article">
                    <div class="wrapper_list_article-small">
                        @foreach (var item in newsListPopulariteByCategory)
                        {
                            <div class="article__entry">
                                <div class="article__image">
                                    <a href="@Url.Action("haber","anasayfa", new { Id = item.Id, Title = item.GenerateSlug() })">
                                        <img src="~/Files/@item.Image" alt="" class="img-fluid">
                                    </a>
                                </div>
                                <div class="article__content">

                                    @foreach (var category in categories)
                                    {

                                        if (category.Id == Model.CategoryId)
                                        {
                                            name = category.CategoryName;
                                            break;
                                        }
                                    }

                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <div class="article__category">
                                                @name
                                            </div>
                                        </li>
                                        <li class="list-inline-item" style="float:right;">
                                            <span class="text-dark text-capitalize">
                                                @item.PublishedTime
                                            </span>
                                        </li>
                                    </ul>
                                    <h5 class="mt-3">
                                        <a href="@Url.Action("haber","anasayfa", new { Id = item.Id, Title = item.GenerateSlug() })">
                                            @item.Title
                                        </a>
                                    </h5>
                                    @if (item.Spot.Length > 120)
                                    {
                                        <p>
                                            @item.Spot.Substring(0, 125)<span>...</span>
                                        </p>
                                    }

                                    <a href="@Url.Action("haber","anasayfa", new { Id = item.Id, Title = item.GenerateSlug() })" class="btn-popularite-single-news mt-2">
                                        Daha Fazla
                                    </a>
                                </div>
                            </div>
                        }

                    </div>
                </aside>

            </div>

        </div>
    </div>
</section>

