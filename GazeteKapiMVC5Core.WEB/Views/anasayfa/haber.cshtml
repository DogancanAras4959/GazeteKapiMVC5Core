@section scripts{

    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="http://responsivevoice.org/responsivevoice/responsivevoice.js"></script>

    <script>

    //var content = document.getElementById("contentnews").innerHTML;
        responsiveVoice.OnVoiceReady = function () {
            responsiveVoice.speak("@Html.Raw(ViewBag.Content)", "Turkish Female");
        };

    </script>

    <script>

        var noMoreData = false;
        var inProgress = false;

        checkWindowSize();

        // Check if the page has enough content or not. If not then fetch records
        function checkWindowSize() {
            if ($(window).height() >= $(document).height()) {
                // Fetch records
                fetchData();
            }
        }

        function fetchData() {

            var start = 0;
            var rowperpage = 3;
            var allcount = @newListByCategory.Count;

            start = start + rowperpage;

            if (start <= allcount) {

                inProgress = true;

                $("#load-more-message").show();
                $("#load-more").hide();

                $.ajax({
                    url: "@Url.Action("InfiniteScroll","anasayfa")",
                    type: 'post',
                    data: { start: start, rowperpage: rowperpage },
                    success: function (response) {

                        noMoreData = response.noMoreData;
                        $("#load-more").show();
                        $("#load-more").append(response.HtmlString);
                        $("#load-more-message").hide();

                        inProgress = false;
                        $(".post:last").after(response).show().fadeIn("slow");
                        checkWindowSize();

                    }
                });
            }
        }

        $(document).on('touchmove', onScroll); // for mobile

        function onScroll() {

            if ($(window).scrollTop() > $(document).height() - $(window).height() - 100) {

                fetchData();
            }
        }

        $(window).scroll(function () {

            var position = $(window).scrollTop();
            var bottom = $(document).height() - $(window).height();

            if (position == bottom) {
                fetchData();
            }

        });

    </script>

