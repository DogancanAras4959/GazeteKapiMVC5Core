        bottom: 0;
        left: 0;
        width: 50px;
        height: 5px;
        background: #c00;
        z-index: 1;
    }

    .wrap__article-detail-title h3 {
        font-size: 18px;
        color: gray;
        font-weight: 500;
        line-height: 25px;
        margin-bottom: 10px;
    }

    .text-rect {
        background-color: #f4c625;
        padding: 9px;
        font-size: 17px;
        color: #54626b;
        font-weight: 700;
        text-transform: uppercase;
    }

    .list-inline-item > a:hover {
        text-decoration: none;
    }

    .blog-tags .list-inline .list-inline-item .fa-tags {
        margin-right: 10px;
        text-align: center;
        position: relative;
        color: #f4c625;
    }

    .blog-tags .list-inline .list-inline-item a:hover {
        display: block;
        margin-bottom: 5px;
        padding: 7px 10px;
        border: 1px solid #ddd;
        margin-right: 2px;
        background-color: #f4c625;
        color: #54626b;
        text-decoration: none;
        text-transform: uppercase;
        font-size: 11px;
        letter-spacing: 1px;
        font-family: "Montserrat",sans-serif;
    }
</style>

<section class="bg-white pb-60">
    <div class="container">
        <div class="row">

            <div class="col-md-8">
                <div class="wrap__article-detail">
                    <div class="wrap__article-detail-title">
                        <h1>
                            @Model.Title
                        </h1>
                        <hr />
                        <h3>
                            @Model.Spot
                        </h3>
                    </div>
                    <br />
                    <div class="wrap_article-detail-info">
                        <ul class="list-inline">
                            <li class="list-inline-item">

                                @foreach (var category in categories)
                                {

                                    if (category.Id == Model.CategoryId)
                                    {
                                        name = category.CategoryName;
                                        break;
                                    }
                                }

                                <a asp-action="kategori" asp-controller="anasayfa" asp-route-id="@Model.CategoryId">
                                    <span class="text-rect">@name</span>
                                </a>
                            </li>
                            <li class="list-inline-item" style="float:right; margin-right:0px; padding-left:15px;">
                                <span class="ml-1">
                                    <i class="fa fa-eye"></i>
                                    @Model.Views
                                </span>
                            </li>
                            <li class="list-inline-item" style="float:right;">
                                <span class="text-dark text-capitalize ml-1">
                                    <i class="fa fa-clock-o"></i>
                                    @Model.PublishedTime
                                </span>
                            </li>
                        </ul>
                    </div>
                    <div class="wrap__article-detail-image">
                        <figure>
                            <img src="~/Files/@Model.Image" alt="" class="img-fluid">
                        </figure>
                    </div>

                    <div class="wrap__article-detail-content">

                        <p class="has-drop-cap-fluid">
                            @Html.Raw(Model.NewsContent)
                        </p>

                        <!-- Blockquote  -->
                    </div>
                </div>

                <!-- News Tags -->
                <div class="blog-tags">
                    <ul class="list-inline">
                        <li class="list-inline-item">
                            <i class="fa fa-tags">
                            </i>
                        </li>
                        @foreach (var item in tagList)
                        {
                            <li class="list-inline-item">
                                <a href="@Url.Action("aramasonucu","anasayfa", new { TagId = item.TagId })" class="tag-link">
                                    @item.tag.TagName
                                </a>
                            </li>
                        }
                    </ul>
                </div>

                <div class="related-article">
                    <div class="article__entry-carousel-three">
                        @foreach (var item in newListRelational)
                        {
                            if (item.Id != Model.Id)
                            {
                                count++;
                                <div class="item">
                                    <!-- Post Article -->
                                    <div class="article__entry">
                                        <div class="article__image">
                                            <a asp-controller="anasayfa" asp-action="haber" asp-route-id="@item.Id">
                                                <img src="~/Files/@item.Image" alt="" class="img-fluid">
                                            </a>
                                        </div>
                                        <div class="article__content">
                                            <ul class="list-inline">
                                                <li class="list-inline-item">
                                                    <span>
                                                        @item.PublishedTime
                                                    </span>
                                                </li>

                                            </ul>
                                            <h5>
                                                <a asp-controller="anasayfa" asp-action="haber" asp-route-id="@item.Id">
                                                    @item.Title
                                                </a>
                                            </h5>

                                        </div>
                                    </div>
                                </div>

                                if (count == 3)
                                {
                                    count = 0;
                                    break;
                                }

                            }
                        }
