@model List<GazeteKapiMVC5Core.Models.News.NewsModel.NewsLıstItemModel>

<style>
    .rect-content-box-title {
        background-color: #f4c625;
        width: 30px;
        height: 30px;
        float: left;
    }

    .content-box-title {
        position: relative;
        left: 7px;
        top: 2px;
        color: #515d5e;
    }

    .rect-title {
        font-weight: 800;
        position: relative;
        top: 1px;
        left: 7px;
        font-size: 20px;
        color: #515d5e;
    }

    .wrapper__list__article {
        margin-bottom: 15px;
    }

        .wrapper__list__article .border_section {
            position: relative;
            padding-bottom: 16px;
            margin-bottom: 14px;
        }

    .card__post-list .card__post__content .card__post__title h6 a {
        color: #515d5e;
        text-shadow: none;
        font-weight: 700 !important;
        font-size: 14px;
    }

        .card__post-list .card__post__content .card__post__title h6 a:hover {
            color: #3c4445;
            text-decoration: none;
        }
</style>

<div style="margin-top:30px;"></div>
<div class="row" style="padding-bottom:5px;">
    <div class="col-sm-12">
        <div class="rect-content-box-title">
            <span class="rect-title">G</span>
        </div>
        <h4 class="content-box-title">Gündem</h4>
    </div>
</div>
<div class="row">

    @foreach (var item in Model)
    {
            <div class="col-sm-12 col-md-6 mb-4">
                <!-- Post Article -->
                <div class="card__post ">
                    <div class="card__post__body">
                        <a href="@Url.Action("haber","anasayfa", new { Id = item.Id, Title = item.GenerateSlug() })">
                            <img src="~/Files/@item.Image" class="img-fluid" alt="">
                        </a>
                        <div style="margin-top:15px;">
                            <h6>
                                <a id="btn-article" style="color:#515d5e;" href="@Url.Action("haber","anasayfa", new { Id = item.Id, Title = item.GenerateSlug() })">
                                    @item.Title
                                </a>
                            </h6>
                        </div>
                    </div>

                </div>
            </div>
    }

</div>

